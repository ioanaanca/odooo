<?xml version="1.8" encoding="utf-8"?>
<openerp>
	<data>
		<record id="vetclinic_animal_action" model="ir.actions.act_window">
			<field name="name">Animals</field>
			<field name="res_model">vetclinic.animal</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Click create to add a new animal record.</p>
			</field>
		</record>
		
		<record id="vetclinic_animal_tree_view" model="ir.ui.view">
			<field name="name">vetclinic.animal.tree.view</field>
			<field name="view_type">tree</field>
			<field name="model">vetclinic.animal</field>
			<field name="arch" type="xml">
				<tree string="Animal">
					<field name="name"/>
					<field name="classification_id"/>
					<field name="tags_ids"/>
					<field name="clinic_ids"/>
					<field name="appointment_ids"/>
					<!-- <field name="res_partner_id"/> -->
				</tree>
			</field>
		</record>
		
		<record id="vetclinic_animal_form_view" model="ir.ui.view">
			<field name="name">vetclinic.animal.form.view</field>
			<field name="view_type">form</field>
			<field name="model">vetclinic.animal</field>
			<field name="arch" type="xml">
				<form string="Animal">
					<field name="name"/>
					<field name="birthdate"/>
					<field name="tags_ids" widget="many2many_tags"/>
					<field name="clinic_ids"/>
					<field name="appointment_ids"/>
				</form>
			</field>
		</record>
		
		
		<record id="vetclinic_animal_search_view" model="ir.ui.view">
			<field name="name">animal.search</field>
			<field name="model">vetclinic.animal</field>
			<field name="arch" type="xml">
				<search string="Animal Search">
					<filter string="Dogs" name="animal_dogs" domain="[('classification_id','=','Dogs')]"/>
					<filter string="Cats" name="animal_cats" domain="[('classification_id','=','Cats')]"/>
					<filter string="Others" name="animal_others" domain="[('classification_id','=','Others')]"/>
					<field name="name"/>
					<field name="clinic_ids"/>
					<group string="Group By">
						<filter string="Classification" name="classification" domain="[]" context="{'group_by':'classification_id'}"/>
					</group>
				</search>
			</field>
		</record>
		
