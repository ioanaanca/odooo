			</field>
		</record> -->
		
		<record id="vetclinic_tags_action" model="ir.actions.act_window">
			<field name="name">Tags</field>
			<field name="res_model">vetclinic.tags</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Click create to add a new tag record.</p>
			</field>
		</record>
		
		
		
		<record id="vetclinic_classification_action" model="ir.actions.act_window">
			<field name="name">Classification</field>
			<field name="res_model">vetclinic.classification</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Click create to add a new classification record.</p>
			</field>
		</record>
		
		<record id="vetclinic_extended_action" model="ir.actions.act_window">
			<field name="name">Extended</field>
			<field name="res_model">vetclinic.extended</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Click create to add a new extended record.</p>
			</field>
		</record>
		
		<record id="vetclinic_doctor_action" model="ir.actions.act_window">
			<field name="name">Doctors</field>
			<field name="res_model">vetclinic.doctor</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Click create to add a new doctor record.</p>
			</field>
		</record>

		<record id="vetclinic_clinic_action" model="ir.actions.act_window">
		<field name="name">vetclinic.clinic.form.view</field>
			<field name="view_type">form</field>
			<field name="model">vetclinic.clinic</field>
			<field name="arch" type="xml">
				<form string="Clinic">
					<field name="name"/>
					<field name="animal_ids"/>
					<!-- <field name="tags_ids" widget="many2many_tags"/> -->
					<field name="doctor_ids"/>
				</form>
			</field>
		</record>
		
		<record id="vetclinic_appointment_action" model="ir.actions.act_window">
